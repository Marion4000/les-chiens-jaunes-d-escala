{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "title": "Chiens jaunes",
    "settings": {
        "layout": {
            "contentSize": "35em",
            "wideSize": "70em"
        },
        "spacing": {
            "margin": true,
            "padding": true,
            "spacingScale": {
                "steps": 0
            },
            "spacingSizes": [{
                    "size": ".25rem",
                    "slug": "0-25",
                    "name": ".25"
                },
                {
                    "size": ".5rem",
                    "slug": "0-5",
                    "name": ".5"
                },
                {
                    "size": "1rem",
                    "slug": "1",
                    "name": "1"
                },
                {
                    "size": "1.5rem",
                    "slug": "1-5",
                    "name": "1.5"
                },
                {
                    "size": "3rem",
                    "slug": "3",
                    "name": "3"
                },
                {
                    "size": "4rem",
                    "slug": "4",
                    "name": "4"
                },
                {
                    "size": "5rem",
                    "slug": "5",
                    "name": "5"
                }
            ],
            "units": [
                "%",
                "px",
                "em",
                "rem",
                "vh",
                "vw"
            ]
        },
        "color": {

            "palette": [{
                    "color": "#191919",
                    "name": "Sombre",
                    "slug": "sombre"
                },
                {
                    "color": "#4E4B4B",
                    "name": "Medium",
                    "slug": "medium"
                },
                {
                    "color": "#F0F0DB",
                    "name": "Claire",
                    "slug": "claire"
                },
                {
                    "color": "#FEDC0B",
                    "name": "Primaire",
                    "slug": "primaire"
                },
                {
                    "color": "#BBEF2B",
                    "name": "Secondaire",
                    "slug": "secondaire"
                },
                {
                    "color": "#FF7733",
                    "name": "Tertiaire",
                    "slug": "tertiaire"
                },
                {
                    "color": "#FFD631",
                    "name": "Primaire désaturée",
                    "slug": "primaire-desaturee"
                },
                {
                    "color": "#CAF73E",
                    "name": "Secondaire désaturée",
                    "slug": "secondaire-desaturee"
                },
                {
                    "color": "#F28B52",
                    "name": "Tertiaire désaturée",
                    "slug": "tertiaire-desaturee"
                }
            ],
            "gradients": [{
                "slug": "fond-titre",
                "gradient": "linear-gradient(180deg,var(--wp--preset--color--claire) 41%,var(--wp--preset--color--primaire) 42%,var(--wp--preset--color--primaire) 72%,var(--wp--preset--color--claire) 73%);",
                "name": "Fond titre"
            }]
        },
        "typography": {
            "fontFamilies": [{
                    "fontFamily": "Signika, sans-serif",
                    "name": "Signika",
                    "slug": "signika",
                    "fontFace": [{
                            "fontFamily": "Signika",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "fontWeight": "400",
                            "src": ["file:./assets/fonts/signika/signika.woff2"]
                        },
                        {
                            "fontFamily": "Signika",
                            "fontStyle": "normal",
                            "fontWeight": "600",
                            "src": ["file:./assets/fonts/signika/signika-semi-bold.woff2"]
                        },
                        {
                            "fontFamily": "Signika",
                            "fontStyle": "normal",
                            "fontWeight": "700",
                            "src": ["file:./assets/fonts/signika/signika-bold.woff2"]
                        }
                    ]
                },
                {
                    "fontFamily": "'Signika négative'",
                    "name": "Signika négative",
                    "slug": "signika-negative",
                    "fontFace": [{
                        "fontFamily": "'Signika négative'",
                        "fontStyle": "normal",
                        "src": ["file:./assets/fonts/signika/signika-negative.woff2"]
                    }]
                },
                {
                    "fontFamily": "'Open sans', sans-serif",
                    "name": "Open sans",
                    "slug": "open-sans",
                    "fontFace": [{
                        "fontFamily": "'Open sans'",
                        "fontStyle": "normal",
                        "src": ["file:./assets/fonts/opensans/opensans.woff2"]
                    }]
                },
                {
                    "fontFamily": "'Open sans italique'",
                    "name": "Open sans italique",
                    "slug": "open-sans-italique",
                    "fontFace": [{
                        "fontFamily": "'Open sans italique'",
                        "fontStyle": "italic",
                        "fontStretch": "normal",
                        "src": ["file:./assets/fonts/opensans/opensans-italique.woff2"]
                    }]
                }
            ],


            "fontSizes": [{
                    "fluid": {
                        "min": "0.875rem",
                        "max": "1rem"
                    },
                    "size": "1rem",
                    "slug": "small"
                },
                {
                    "fluid": {
                        "min": "1.5rem",
                        "max": "1.777rem"
                    },
                    "size": "calc(1.6rem + .5vw)",
                    "slug": "medium"
                },
                {
                    "fluid": {
                        "min": "1.8rem",
                        "max": "2.369rem"
                    },
                    "size": "calc(2rem + .5vw)",
                    "slug": "large"

                },
                {
                    "fluid": {
                        "min": "2.5rem",
                        "max": "3.157rem"
                    },
                    "size": "calc(2.8rem + .5vw)",
                    "slug": "x-large"
                },
                {
                    "fluid": {
                        "min": "3.5rem",
                        "max": "4.209rem"
                    },
                    "size": "calc(3.9rem + .5vw)",
                    "slug": "xx-large"
                }
            ]
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--claire)",
            "text": "var(--wp--preset--color--sombre)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--open-sans)",
            "fontSize": "var(--wp--preset--font-size--small)",
            "lineHeight": "1.5"
        },
        "blocks": {
            "core/paragraph": {
                "spacing": {
                    "margin": {
                        "top": "0",
                        "bottom": "0"
                    }
                }
            },
            "core/navigation": {
                "elements": {
                    "link": {
                        ":hover": {
                            "typography": {
                                "textDecoration": "underline dotted"
                            }
                        },
                        ":focus": {
                            "typography": {
                                "textDecoration": "underline dotted"
                            }
                        },
                        ":active": {
                            "typography": {
                                "textDecoration": "none",
                                "fontWeight": "900"
                            }
                        },
                        "typography": {
                            "textDecoration": "underline"
                        }
                    }
                },
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--medium)"
                }
            },
            "core/post-author": {
                "color": {
                    "text": "var(--wp--preset--color--primaire)"
                }

            },
            "core/post-content": {
                "elements": {
                    "link": {
                        "color": {
                            "text": "var(--wp--preset--color--sombre)"
                        }
                    }
                }
            },
            "core/post-date": {
                "elements": {
                    "link": {
                        "typography": {
                            "textTransform": "uppercase"
                        }
                    }
                }
            },
            "core/separator": {
                "color": {
                    "text": "var(--wp--preset--color--primaire)"
                }
            },
            "core/site-title": {
                "border": {
                    "color": "var(--wp--preset--color--primaire)",
                    "style": "solid",
                    "width": "0 0 2px 0"
                },
                "elements": {
                    "link": {
                        ":hover": {
                            "typography": {
                                "textDecoration": "underline dotted"
                            }
                        },
                        ":focus": {
                            "typography": {
                                "textDecoration": "underline dotted"
                            }
                        },
                        ":active": {
                            "typography": {
                                "textDecoration": "none",
                                "fontWeight": "600"
                            }
                        },
                        "typography": {
                            "textDecoration": "underline"
                        }
                    }
                },
                "typography": {
                    "textTransform": "uppercase"
                }
            }

        },
        "elements": {
            "heading": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--signika)",
                    "lineHeight": "1"
                },
                "spacing": {
                    "margin": {
                        "top": "0"
                    }
                }
            },
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--xx-large)",
                    "fontWeight": "700"

                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--x-large)",
                    "fontWeight": "600"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontWeight": "600"

                }
            },
            "h4": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--medium)",
                    "fontWeight": "400"

                }
            },

            "button": {
                "spacing": {
                    "margin": {
                        "bottom": "var(--wp--preset--spacing--1)",
                        "top": "var(--wp--preset--spacing--1)"
                    }
                },
                "border": {
                    "radius": "var(--wp--preset--spacing--1-5)"
                },
                "color": {
                    "background": "var(--wp--preset--color--secondaire-desaturee)",
                    "text": "var(--wp--preset--color--sombre)"
                },
                ":focus": {
                    "color": {
                        "background": "var(--wp--preset--color--secondaire-desaturee)",
                        "text": "var(--wp--preset--color--sombre)"
                    }
                },
                ":hover": {
                    "color": {
                        "background": "var(--wp--preset--color--sombre)",
                        "text": "var(--wp--preset--color--secondaire-desaturee)"
                    }
                },

                ":active": {
                    "color": {
                        "background": "var(--wp--preset--color--secondaire-desaturee)",
                        "text": "var(--wp--preset--color--sombre)"
                    }
                },
                ":visited": {
                    "color": {
                        "text": "var(--wp--preset--color--sombre)"
                    }
                }
            },
            "link": {
                "typography": {
                    "textDecoration": "underline"
                },
                "color": {
                    "text": "var(--wp--preset--color--sombre)"
                },
                ":hover": {
                    "typography": {
                        "textDecoration": "underline dotted"
                    }
                },
                ":focus": {
                    "typography": {
                        "textDecoration": "underline dotted"
                    }
                },
                ":active": {
                    "typography": {
                        "textDecoration": "none"
                    }
                }
            }
        }
    }
}